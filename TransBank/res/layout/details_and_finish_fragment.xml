<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/myIBANdetailsView"
			android:layout_width="@dimen/edit_text_width"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/top_margin"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/otherIBANdetailsView"
			android:layout_width="@dimen/edit_text_width"
			android:layout_height="wrap_content"
			android:layout_below="@id/myIBANdetailsView"
			android:layout_marginTop="@dimen/top_margin"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/sumDetailsView"
			android:layout_width="@dimen/edit_text_width"
			android:layout_height="wrap_content"
			android:layout_below="@id/otherIBANdetailsView"
			android:layout_marginTop="@dimen/top_margin"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/descriptionDetailsView"
			android:layout_width="@dimen/edit_text_width"
			android:layout_height="wrap_content"
			android:layout_below="@id/sumDetailsView"
			android:layout_marginTop="@dimen/top_margin"
			android:textSize="16sp" />

		<Button
			android:id="@+id/finalizeBtn"
			android:layout_width="@dimen/edit_text_width"
			android:layout_height="wrap_content"
			android:layout_below="@id/descriptionDetailsView"
			android:layout_marginTop="@dimen/top_margin"
			android:text="@string/done_btn" />
	</RelativeLayout>

</ScrollView>